<time datetime='<%= date.toISOString() %>'>
  <%=
    date.toLocaleDateString('en-au', {
      timeZone: 'UTC',
      year: 'numeric',
      month: 'long',
      day: 'numeric',
    })
  %>
  <%=
    date.toLocaleTimeString('en-au', {
      hour12: true,
      hour: '2-digit',
      minute: '2-digit',
      second: undefined,
      timeZone: 'UTC',
    })
  %>
</time>
