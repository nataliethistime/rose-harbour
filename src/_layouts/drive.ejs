<!doctype html>
<html lang='en'>
  <head>
    <%- include('/base-head.ejs') %>
    <style>
      .hero-image {
        width: 100%;
      }
      .hero-image img {
        display: block;
        margin: 0 auto;
        border-radius: 12px;
        box-shadow: var(--box-shadow);
      }
      .title {
        margin-bottom: 1em;
        padding: 1em 0;
        text-align: center;
        line-height: 1;
      }
      .title h1 {
        margin: 0 0 0.5em 0;
      }
      .info {
        margin-bottom: 0.5em;
        color: rgb(var(--gray));
        line-height: 1.5;
      }
      .last-updated-on {
        font-style: italic;
      }
    </style>
  </head>

  <body>
    <%- include('/header.ejs') %>

    <main>
      <article>
        <div class='hero-image'>
          <% if (heroImage) { %>
            <img width=1020 height=510 src='<%= heroImage %>' alt='Car trip banner image' />
          <% } %>
        </div>
        <div class='prose'>
          <div class='title'>
            <h1><%= title %></h1>
            <div class='info'>
              <%= distanceKm %> km
              <br />
              <%- include('/formatted-datetime', { date: startAt }) %>
              <br />
              <%- include('/formatted-duration', { duration: (endAt.valueOf() - startAt.valueOf()) / 1000 }) %>
            </div>
            <hr />
          </div>

          <%- content %>
        </div>
      </article>
    </main>

    <%- include('/footer.ejs') %>
  </body>
</html>
