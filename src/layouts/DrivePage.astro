---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import { formatDuration } from '../utils';
import FormattedDateTime from '../components/FormattedDateTime.astro';

type Props = CollectionEntry<'drives'>['data'];

const { title, description, heroImage, distanceKm, startAt, endAt } = Astro.props;
---

<html lang='en'>
  <head>
    <BaseHead title={title} description={description} />
    <style>
      .hero-image {
        width: 100%;
      }
      .hero-image img {
        display: block;
        margin: 0 auto;
        border-radius: 12px;
        box-shadow: var(--box-shadow);
      }
      .title {
        margin-bottom: 1em;
        padding: 1em 0;
        text-align: center;
        line-height: 1;
      }
      .title h1 {
        margin: 0 0 0.5em 0;
      }
      .info {
        margin-bottom: 0.5em;
        color: rgb(var(--gray));
        line-height: 1.5;
      }
      .last-updated-on {
        font-style: italic;
      }
    </style>
  </head>

  <body>
    <Header />

    <main>
      <article>
        <div class='hero-image'>
          {
            heroImage && (
              <Image width={1020} height={510} src={heroImage} alt='Car trip banner image' />
            )
          }
        </div>
        <div class='prose'>
          <div class='title'>
            <h1>{title}</h1>
            <div class='info'>
              {distanceKm} km<br />
              <FormattedDateTime date={startAt} /><br />
              {formatDuration((endAt.valueOf() - startAt.valueOf()) / 1000)}
            </div>
            <hr />
          </div>

          <slot />
        </div>
      </article>
    </main>

    <Footer />
  </body>
</html>
